<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visualizar Produtos</title>
</head>
<body>
    <h1>Produtos Cadastrados</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Pre√ßo</th>
            </tr>
        </thead>
        <tbody>
            <% produtos.forEach(produto => { %>
                <tr>
                    <td><%= produto._id %></td>
                    <td><%= produto.nome %></td>
                    <td>R$ <%= produto.preco.toFixed(2) %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>